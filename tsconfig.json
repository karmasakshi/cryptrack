{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@cryptack/apis/*": ["src/apis/*"],
      "@cryptack/components/*": ["src/components/*"],
      "@cryptack/interfaces/*": ["src/interfaces/*"],
      "@cryptack/pages/*": ["src/pages/*"],
      "@cryptack/store/*": ["src/stores/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
